  "$_path/venv/bin/python" "$@"
}
alias vp='venv-python'

_fm_run() {
  "$@"
  local ec=$?
  if [ "$ec" != 0 ]; then
    printf >&2 "(exit code %d)" "$ec"
    read -k1
  fi
}

_fm_genDirList() {
  echo ".."
  fd -td -d1
}

fm() {
  ls -1

  while true; do
    printf >&2 "?> "
    read -k1 char
    case "$char" in
      q||) return ;;
      $) _fm_run "$SHELL" ;;
      n|) _fm_run nnnAndCd ;;
      ) clear ;;
      w) w ;;
      c)
        printf >&2 "\n"
        choice=$(_fm_genDirList | fzagnostic) \
          && cd "$choice" \
          && clear \
          && ls -1
        ;;
      *)
        printf >&2 "???\n"
        ;;
    esac
  done
}

cb() { nvim +"W3m $*"; }
cb-search() {
  local query=$(printf "%s" "$*" | tr ' ' '+')
  cb "https://lite.duckduckgo.com/lite/?q=$query"
}

# live grep
lg() { nvim +'Telescope live_grep'; }

fpga-ci9p() {
  case "$1" in
    detect)
      openFPGALoader -c ch347_jtag --detect
      ;;

    upload)
      openFPGALoader -c ch347_jtag -b colorlight-i9+ "$2"
      ;;

    fzupload)
      local choice
      choice=$(fd -HI '\.bit$' | fzagnostic) || return 1
      fpga-ci9p upload "$choice"
      ;;

    *) return 2 ;;
  esac
}

# World's laziest dict
dict() {
  local url="https://en.wiktionary.org/wiki/$1"
  w3m -dump "$url" | "$EDITOR"
}
