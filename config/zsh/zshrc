# music related
ytdl() {
  exists yt-dlp && { yt-dlp "$@"; return "$?"; }
  exists youtube-dl && { youtube-dl "$@"; return "$?"; }
  return 1
}
alias Mq='mus queue'
alias Ma='mus add'
alias Ms='mus shuffle'
alias Mp='mus play'
alias Mc='mus clear'
_mm_showQueue() {
  {
    echo '(( Start ))'
    mus queue
    echo '(( End ))'
  }
}
mus-menu() {
  while true; do
    clear
    _mm_showQueue | grep -C 3 '^\*'
    printf >&2 "(Q)uit, (V)iew queue, (N)ext, (P)rev, (S)huffle\n"
    printf >&2 "[q/v/n/p/s] "
    read -k1 key
    printf >&2 "\n"
    case "$key" in
      q|Q) return 0 ;;
      v|V)
        _mm_showQueue | less
        ;;
      n|N) mus next ;;
      p|P) mus prev ;;
      s|S) mus shuffle ;;
      *) printf >&2 "Unknown command...\n" ;;
    esac
  done
}
alias M='mus-menu'

