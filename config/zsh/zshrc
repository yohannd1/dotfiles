# proc list searches - might be the fastest & simplest way to do this
procList() { ps -eo pid,args | tail +2 | sed 's/^ \+//g'; }
procSearch() {
  case $# in
    0) procList | fzagnostic -m ;;
    1) procList | rg "$1" ;;
    *) return 2 ;;
  esac
}
alias P='procSearch'

procDo() { procSearch | cut -d' ' -f1 | xargs -I{} "$@"; }

eachLine() {
  tr '\n' '\0' | xargs -0 -I{} "$@"
}

findMap() {
  [ $# -lt 2 ] && return 2
  fd "$1" | tr '\n' '\0' | xargs -0 -I{} "${@:2}"
}

tbw() {
  printf >&2 "NVME:\n"
  sudo -n nvme smart-log /dev/nvme0 | grep 'Data Units Written'
}

