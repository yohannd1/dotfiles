# -*- mode: sh; -*-
# vim: ft=conf fdm=marker foldmarker={{,}} sw=2

set shell bash
set icons
set ignorecase
# set hidden
# set drawbox

# configure preview and column widths
set previewer cat
set nopreview
set ratios 1:4

# commands
cmd new ${{
  set -ue

  while true; do
    printf "(f)ile or (d)ir => "
    read -n1 answer
    printf "\n"

    case "$answer" in
      f|d) break ;;
      ) exit ;;
      *) ;;
    esac
  done

  printf "filename => "
  read filename
  printf "\n"

  [ -z "$filename" ] && exit

  if [ -e "$filename" ]; then
    printf "Filename already exists.\n"
    read _
  else
    case "$answer" in
      f) touch "$filename" ;;
      d) mkdir "$filename" ;;
    esac

    if [ $? != 0 ]; then
      printf "Failed to create file.\n"
      read _
    fi
  fi
}}

cmd trash ${{
  set -ue

  IFS=$(printf '\n\t')
  printf "Selected files:\n"
  printf "  %s\n" $fx
  printf "Would you like to send them to the TRASH?\n"

  while true; do
    printf "(y)es or (n)o => "
    read -n1 answer
    printf "\n"

    case "$answer" in
      y) trash-put $fx; break ;;
      n) break ;;
      *) ;;
    esac

    if [ $? != 0 ]; then
      printf "Failed to move file(s) to trash.\n"
      read _
    fi
  done
}}
cmd delete ${{
  set -ue

  IFS=$(printf '\n\t')
  printf "Selected files:\n"
  printf "  %s\n" $fx
  printf "Would you like to PERMANENTLY DELETE them?\n"

  while true; do
    printf "(y)es or (n)o => "
    read -n1 answer
    printf "\n"

    case "$answer" in
      y) rm -rvf $fx; break ;;
      n) break ;;
      *) ;;
    esac

    if [ $? != 0 ]; then
      printf "Failed to permanently delete file(s).\n"
      read _
    fi
  done
}}

cmd flatten-dir ${{
  set -ue

  _dummy() { echo $#; }

  oldIFS="$IFS"
  IFS=$(printf '\n\t')
  if [ "$(_dummy $fx)" != 1 ]; then
    printf "You should select exactly one directory.\n"
  fi
  IFS="$oldIFS"

  dir="$fx"

  printf "Selected directory: %s\n" "$dir"

  case "$(ls -A "$dir" | wc -l)" in
    0) exit ;;
    1) ;;
    *)
      printf "There is more than one file on this folder:\n"
      ls -A "$dir"
      read _
      exit
      ;;
  esac

  toFlatten="$(ls -A "$dir")"

  if [ ! -d "$toFlatten" ]; then
    printf "File %s should be a folder.\n" "$dir/$toFlatten"
    read _
    exit
  fi

  printf "TODO: finish this\n"
  read _
  exit

  printf "Would you like proceed?\n"

  while true; do
    printf "(y)es or (n)o => "
    read -n1 answer
    printf "\n"

    case "$answer" in
      y) false; break ;;
      n) break ;;
      *) ;;
    esac

    if [ $? != 0 ]; then
      printf "Failed to flatten directory.\n"
      read _
    fi
  done
}}

cmd make-exec ${{ chmod +x "$f" }}; reload
cmd make-noexec ${{ chmod -x "$f" }}; reload
cmd move-here ${{ PROMPT_ON_ERROR=1 d.fileman-actions move-here "$fs" }}; unselect; reload
cmd copy-here ${{ PROMPT_ON_ERROR=1 d.fileman-actions copy-here "$fs" }}; unselect; reload
cmd extract ${{ PROMPT_ON_ERROR=1 d.fileman-actions extract "$f" }}

# command mappings
map . set hidden!
map n new
map <c-n> search-next
map x trash
map v move-here
map p copy-here
map R ${{ "$EDITOR" . }}
map E extract
map P set preview!
map ~ cd ~
map <c-z> ${{ kill -STOP "$PPID" }}

