# Useful reference: https://gist.github.com/matsubo/8012c260f76f1dad3ad9
# Also see tigrc(5)

set line-graphics = auto
set tab-size = 8

bind generic g none
bind generic G none
bind generic G move-last-line
bind generic gg move-first-line
bind generic gG move-last-line
bind generic gk move-first-line
bind generic gj move-last-line

# better bindings for the sections...
bind generic l view-main
bind generic L view-log

# set main-view = date:relative-compact author:yes title:yes
set main-view = line-number:no id:no date:custom,format="%Y-%m-%d %H:%M" author:full commit-title:yes,graph,refs,overflow=no

